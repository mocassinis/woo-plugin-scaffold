{
	"name": "yourname/woocommerce-plugin-template",
	"type": "wordpress-plugin",
	"description": "A modern WooCommerce plugin development template with best practices built in.",
	"keywords": [
		"WordPress",
		"WooCommerce",
		"Plugin",
		"Template"
	],
	"homepage": "https://github.com/mocassinis/woo-plugin-scaffold",
	"license": "GPL-2.0-or-later",
	"require": {
		"php": ">=7.4"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"wp-coding-standards/wpcs": "^3.0",
		"woocommerce/woocommerce-sniffs": "^0.1",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"php-parallel-lint/php-parallel-lint": "^1.3",
		"phpstan/phpstan": "^1.10",
		"phpstan/extension-installer": "^1.3",
		"szepeviktor/phpstan-wordpress": "^1.3",
		"wp-cli/i18n-command": "^2.4"
	},
	"autoload": {
		"psr-4": {
			"Nevma\\Plugin_Tpl\\": "src/"
		}
	},
	"scripts": {
		"lint": [
			"@lint:php",
			"@lint:phpcs"
		],
		"lint:php": "@php ./vendor/bin/parallel-lint --exclude .git --exclude vendor --exclude node_modules .",
		"lint:phpcs": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs",
		"fix": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf",
		"analyze": "@php ./vendor/bin/phpstan analyze",
		"compat": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs -p . --standard=phpcompat.xml.dist",
		"make-pot": "wp i18n make-pot . languages/plugin-tpl.pot"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"phpstan/extension-installer": true
		},
		"platform": {
			"php": "7.4"
		}
	}
}
